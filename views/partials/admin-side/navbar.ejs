
<body>
<nav class="navbar">
  <div>
    <i data-feather="menu" id="menu-toggle" class="cursor-pointer"></i>
  </div>
    <div class="logo text-gray-600">NovaMart</div>
    <div class="user-icon">
      <span class="iconify" data-icon="qlementine-icons:user-16" style="width: 32;height: 32;color: #474744;"></span>
    </div>
  </nav>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menuBtn = document.getElementById("menu-toggle");
      const sidebar = document.getElementById("sidebar");
      const mainContent = document.querySelector(".main-content");
  
      sidebar.classList.add("sidebar-closed");
      mainContent.classList.add("main-expanded");
  
      menuBtn.addEventListener("click", () => {
        const isClosed = sidebar.classList.contains("sidebar-closed");
  
        sidebar.classList.toggle("sidebar-open");
        sidebar.classList.toggle("sidebar-closed");
  
        mainContent.classList.toggle("main-expanded", !isClosed);
      });
    });
  </script>
  
  
  