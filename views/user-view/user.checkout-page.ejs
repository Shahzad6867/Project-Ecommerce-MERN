                                             <% offerPrice = tempPrice2 %>
                                         <% } else {%>
                                             <% offerPrice = tempPrice1 %>
                                         <% } %>
                                         
                                     <% } else if(cartItems[i].categoryOfferId.discountType === "flat") {%>
