<%- include("../partials/user-side/navbar.ejs")%>
<div class="main-content">
    <div class="flex justify-between items-center mb-8">
        <% if (cartItemsCount.length > 0 && cartItemsCount[0]?.totalQuantity) { %>
            <h1 class="text-3xl font-bold">My Cart (<%= cartItemsCount[0]?.totalQuantity  || 0 %>)</h1>
        <% } else { %>
            <h1 class="text-3xl font-bold">My Cart (0)</h1>
            <% } %>
       
    </div>

    <div class="w-full flex justify-between">
        
        <div class="w-[65%] mr-2">
            <% let subTotal = 0 %>
            <% if (cartItems.length > 0) { %>
               
             <% for( let i = 0; i < cartItems.length; i++ ) { %>
                <% subTotal += (cartItems[i].productId.variants[cartItems[i].variant].price * cartItems[i].quantity * 0.62) %>
                <div class="bg-white rounded-lg border shadow-sm w-full  flex justify-between mb-2 p-6 ">
                    <div class="max-w-[20%] h-[20%]  border-2 border-black rounded-lg ">
                      <img src="<%= cartItems[i].productId.variants[cartItems[i].variant].productImages[0] %>" alt="" class="w-full height-[100%] rounded">
                    </div>
                    <div class="w-[78%]">
                     <div class="w-full flex justify-between">
                         <h1 class="font-bold text-2xl"><%= cartItems[i].productId.productName%></h1>
                         <a href="/cart/delete-cart-item?cartItemId=<%= cartItems[i]._id %>">
                            <button type="button" class="text-gray-700 font-bold hover:text-black flex rounded-xl  bg-red-400 hover:bg-red-500 px-4 py-2 items-center text-sm" >
                                <i data-feather="trash-2" class="w-4 h-4 mr-1"></i> Remove
                            </button>
                         </a>
                     </div>
                     <p>Color : <strong><%= cartItems[i].productId.variants[cartItems[i].variant].color %></strong> | Size : <strong><%= cartItems[i].productId.variants[cartItems[i].variant].size %></strong> | <% if (cartItems[i].productId.variants[cartItems[i].variant].stockStatus === "In Stock" || cartItems[i].productId.variants[cartItems[i].variant].stockStatus === "Pre Order") { %>
                      <span class="text-green-600"><%= cartItems[i].productId.variants[cartItems[i].variant].stockStatus %></span>
                     <% } else { %> <span class="text-red-500"><%= cartItems[i].productId.variants[cartItems[i].variant].stockStatus %></span> <% } %></p>
                     <div class="flex items-center gap-3 mt-1 mb-2">
                         <p class="text-3xl font-bold text-black">$ <%= cartItems[i].productId.variants[cartItems[i].variant].price * 0.62 %></p>
                           <p class="line-through text-gray-400 text-lg">$<%= cartItems[i].productId.variants[cartItems[i].variant].price %></p>
                     </div>
                     <div class="w-full mt-1 flex justify-between items-center">
                         <div class="flex items-center mt-2">
                             <button id="decQtyBtn<%= i %>" type="button" class="text-center rounded-full px-2 py-2 crop-btn mr-1 " onclick="decrementQuantity('<%= i %>')">
                                 <i data-feather="minus"></i>
                             </button> 
                             <input type="text" id="quantity<%= i %>" value="<%= cartItems[i].quantity %>" class="border border-black bg-white w-[3rem] px-2 text-xl rounded-full py-2 text-center" disabled>
                             <button id="incQtyBtn<%= i %>" type="button" type="button" class="text-center rounded-full px-2 py-2 ml-1 crop-btn " onclick="incrementQuantity('<%= i %>')">
                                 <i data-feather="plus"></i>
                             </button>
                         </div>
                         <a id="updateCartItemBtn<%= i %>" href="/cart/update-cart-item?productId=<%= cartItems[i].productId._id %>&variant=<%= cartItems[i].variant %>&quantity=<%= cartItems[i].quantity %>">
                            <button type="button" class="text-gray-700 bg-green-300 hover:bg-green-400 pl-2 pr-3 font-bold py-2 rounded-xl flex items-center text-sm" >
                                <i data-feather="check" class="w-4 h-4 mr-1"></i> Update Item
                            </button>
                         </a>
                     </div>
                    </div>
                 </div>
             <% } %>
            <% } else { %>
                <div class="bg-white rounded-lg border shadow-sm w-full min-h-[40%]  p-6">
                    <div class="border-2 w-full h-[196px]  rounded-lg">
                        <h1 class="text-2xl font-bold ml-[10rem] mt-[3.8rem]">Looks like you havenâ€™t added anything yet !</h1>
                        <a href="/shop"><button type="button"  class="btn-primary ml-[22rem] flex font-bold rounded-full px-4 py-2 mt-1 "><i data-feather="shopping-cart" class="mr-2"></i>Shop Now</button></a>
                    </div>
                </div>
           <% } %>
            
        </div>
        
        <div class="w-[35%]">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-bold mb-4">Order Summary</h2>
                <div class="flex items-center mb-3">
                    <input type="text" placeholder="Coupon Code" class="w-[80%] px-4 py-2 border-2 border-blue-600 rounded-l-md focus:outline-none focus:ring-2 focus:ring-green-500">
                    <button type="button" class="offerBtn w-[20%] px-4 py-[0.6rem] font-bold  rounded-r-md hover:bg-gray-700">
                        Apply
                    </button>
                </div>
                <div class="w-full">
                    <a href="" >
                        <div  class="offerBtn w-full rounded-md flex  mb-3 ">
                            <i data-feather="gift" class="w-5 h-5 ml-2 mt-[5px]"></i>
                            <span class="font-bold ml-2 my-1">View Available Offers</span>
                            <i data-feather="chevron-right" class="w-7 h-7 ml-[42%]  mt-[0.095rem]"></i>
                        </div>
                    </a> 
                </div>
                <div class="space-y-4">
                    <div class="flex justify-between">
                        <span class="text-gray-600 font-bold">Subtotal (<%= cartItemsCount[0]?.totalQuantity || 0%> items)</span>
                        <span class="font-bold">$ <%= subTotal.toFixed(2) %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600 font-bold">Shipping</span>
                        <span class="font-medium">Free</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600 font-bold">Tax</span>
                        <% let tax = (subTotal * 0.05).toFixed(2) %>
                        <span class="font-bold">$ <%= tax %></span>
                    </div>
                    <div class="border-t border-gray-200 pt-4">
                        <div class="flex justify-between">
                            <span class="text-lg font-bold">Total</span>
                            <span class="text-lg font-bold">$ <%= Number(subTotal.toFixed(2)) + Number(tax) %></span>
                        </div>
                    </div>
                </div>
                
                <button type="button" onclick="window.location.href='checkout.html'" class="w-full mt-6 py-3 px-4 btn-primary font-bold rounded-lg flex items-center justify-center">
                    <span>Proceed to Checkout</span>
                    <i data-feather="arrow-right" class="w-5 h-5 ml-2"></i>
                </button>
                
                
            </div>
            
            <div class="bg-white rounded-lg shadow-sm p-6 mt-6">
                <h2 class="text-lg font-bold mb-4">Payment Methods</h2>
                <div class="flex space-x-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/196/196578.png" class="h-8" alt="Visa">
                    <img src="https://cdn-icons-png.flaticon.com/512/196/196561.png" class="h-8" alt="Mastercard">
                    <img src="https://icons.iconarchive.com/icons/simpleicons-team/simple/128/american-express-icon.png" class="h-8" alt="American Express">
                    
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    feather.replace();
    function incrementQuantity(cartIndex){
        let quantity = document.getElementById(`quantity${cartIndex}`)
        let updateCartItemBtn = document.getElementById(`updateCartItemBtn${cartIndex}`)
        let href = updateCartItemBtn.href.split("&")
        let counter = parseInt(quantity.value)
        counter++
        let changeQuantity = href[2].slice(0,9) + counter
        href[2] = changeQuantity
        if(counter > 10){
            iziToast.warning({
                title: "Quantity Limit Reached",
                message: "You can order up to a maximum of 10 items only.",
                position : "topRight"
            });
        }else{
            quantity.value = counter
            updateCartItemBtn.href = href.join("&")
        }
        
    }
    function decrementQuantity(cartIndex){
        let quantity = document.getElementById(`quantity${cartIndex}`)
        let updateCartItemBtn = document.getElementById(`updateCartItemBtn${cartIndex}`)
        let href = updateCartItemBtn.href.split("&")
        let counter = parseInt(quantity.value)
        counter--
        let changeQuantity = href[2].slice(0,9) + counter
        href[2] = changeQuantity
        if(counter < 1){
            iziToast.warning({
                title: "Invalid Quantity",
                message: "Quantity cannot be less than 1, Click Remove to delete the item.",
                position : "topRight"
            });
        }else{
            quantity.value = counter
            updateCartItemBtn.href = href.join("&")
        }
        
    }
</script>
<%- include("../partials/user-side/footer.ejs")%>