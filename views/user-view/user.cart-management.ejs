                        <% } %>
                        <% subTotal += (offerPrice * cartItems[i].quantity) %>
                    <% } else if(cartItems[i].productOfferId === null && cartItems[i].categoryOfferId !== null && (cartItems[i].categoryOfferId.startDate <= now && cartItems[i].categoryOfferId.endDate >= now) ){%>
