                            <div class="flex  justify-between ">
                                <form id="addToCartBtn<%= i %><%= j %>" action="/home/cart" method="post">
                                    <input type="text" name="productId" value="<%= products[i]._id %>" hidden>
                                    <input type="text" name="variant" value="<%= j %>" hidden>
                                    <input type="text" name="quantity" value="<%= isProductInCart.quantity %>" hidden>
                                    <button type="submit" class="w-half bg-yellow-400 hover:bg-yellow-500 text-gray-900 py-2  px-4 rounded-full font-medium text-sm flex items-center justify-center">
                                        <i data-feather="shopping-cart" class="w-6 h-6 "></i> 
                                    </button>
                                </form>
                                <div class="flex items-center justify-between w-[68%] h-[78%]  border border-black rounded-lg">
