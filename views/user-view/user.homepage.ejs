                                        <i data-feather="star" class="w-4 h-4 fill-current"></i>
                                        <i data-feather="star" class="w-4 h-4 fill-current"></i>
                                        <i data-feather="star" class="w-4 h-4 fill-current"></i>
                                        <i data-feather="star" class="w-4 h-4 fill-current"></i>
                                    </div>
                                    <span class="text-gray-500 text-xs ml-1">(4,567)</span>
                                </div>
                                <div class="flex items-center mb-2">
                                    <span class="font-regular text-xs">Brand : <a href="#" class="text-blue-700"><%= (products[i].brandId.brandName) %></a></span>
                                </div>
                                <div class="flex items-center mb-2">
                                    <span class="font-regular text-gray-700 text-xs">Size : <a href="#" ><%= (products[i].variants[j].size) %></a></span>
                                </div>
                                <div class="flex items-center mb-2">
                                    <span class="font-bold text-lg">$<%= (products[i].variants[j].price * 62/100).toFixed(2) %></span>
                                    <span class="text-gray-500 text-sm line-through ml-2">$<%= products[i].variants[j].price %></span>
                                    <span class="text-green-600 text-xs font-medium ml-2">38% off</span>
                                </div>
                                <button class="w-full bg-yellow-400 hover:bg-yellow-500 text-gray-900 py-2 rounded-md font-medium text-sm flex items-center justify-center">
                                    <i data-feather="shopping-cart" class="w-4 h-4 mr-2"></i> Add to Cart
                                </button>
                            </div>
                           <% } %>
                          <% } %>
                        <% } %>
                      <% } %>
                    <% } %>
                    <!-- More deal cards... -->
                </div>
            </div>
        </section>


        <!-- More sections... -->
    </main>

    <script>
    function incrementQuantity(productIndex,variantIndex){
        let quantity = document.getElementById(`quantity${productIndex}${variantIndex}`)
        let addToCartBtn = document.getElementById(`addToCartBtn${productIndex}${variantIndex}`)
        let href = addToCartBtn.href.split("&")
        let counter = parseInt(quantity.value)
        counter++
        let changeQuantity = href[2].slice(0,9) + counter
        href[2] = changeQuantity
        if(counter > 10){
            iziToast.warning({
                title: "Quantity Limit Reached",
                message: "You can order up to a maximum of 10 items only.",
                position : "topRight"
            });
        }else{
            quantity.value = counter
            addToCartBtn.href = href.join("&")
        }
        
    }
    function decrementQuantity(productIndex,variantIndex){
        let quantity = document.getElementById(`quantity${productIndex}${variantIndex}`)
        let addToCartBtn = document.getElementById(`addToCartBtn${productIndex}${variantIndex}`)
        let counter = parseInt(quantity.value)
        counter--
       
        if(counter < 1){
            iziToast.warning({
                title: "Invalid Quantity",
                message: "Quantity cannot be less than 1, Go to cart to remove the item.",
                position : "topRight"
            });
        }else{
            quantity.value = counter
            addToCartBtn.href = href.join("&")
        }
        
    }
    </script>

