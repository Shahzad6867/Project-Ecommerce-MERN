<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Processing Payment - Novamart</title>
  <link rel="stylesheet" href="/styles/style1.css" />
  <style>
    body {
  margin: 0;
  height: 100vh;
  font-family: Arial, sans-serif;
  background: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container {
  text-align: center;
}

.loader {
  width: 60px;
  height: 60px;
  border: 6px solid #ddd;
  border-top: 6px solid #2ecc71;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

h2 {
  margin-bottom: 8px;
  color: #333;
}



p {
  color: #666;
  font-size: 14px;
}

  </style>
</head>
<body>
  <input type="text" value="<%= orderId %>" hidden>
  <div>
    <div class="container">
      <div class="loader"></div>
      <h2>Payment is being processed</h2>
      <p>Please do not refresh or press the back button.</p>
    </div>
    <div class="container">
      <h1>Novamart</h1>
    </div>
  </div>
  

  
</body>
<script>

const orderId = document.querySelector("input").value

function checkPaymentStatus() {
  fetch(`/order-status/${orderId}`,{method : "GET"})
  .then(res => res.json())
  .then(data => {
    if(data.message != "Pending"){
      window.location.href = `/order-confirmation/${orderId}`
    }
  })
  .catch(error => console.log(error))
}

// Poll every 3 seconds
setInterval(checkPaymentStatus, 3000);



</script>
</html>
